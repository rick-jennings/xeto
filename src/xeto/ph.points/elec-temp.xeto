// Point associated with temperature of an electrical component
ElecTempPoint : NumberPoint <abstract> {
  elec
  temp
  unit: Unit <quantity:"temperature"> "Â°F"
}

// Sensor that measures temperature of an electrical component
ElecTempSensor : ElecTempPoint & SensorPoint <abstract>

// Sensor that measures temperature of a heatsink used to cool electrical component(s)
ElecHeatsinkTempSensor : ElecTempSensor { heatsink }

// Sensor that measures temperature of an electric cable
ElecCableTempSensor : ElecTempSensor { cable }

// Sensor that measures temperature of an electric coupler
ElecCouplerTempSensor : ElecTempSensor { coupler }

//////////////////////////////////////////////////////////////////////////
// EVSE
//////////////////////////////////////////////////////////////////////////

// Sensor that measures temperature of an EVSE cable
EvseCableTempSensor : ElecCableTempSensor { evse }

// Sensor that measures temperature of an EVSE coupler
EvseCouplerTempSensor : ElecCouplerTempSensor { evse }
